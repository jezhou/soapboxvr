<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.jezhou.soapboxvronly.MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Listen To Recordings"
        android:onClick="Recordings"
        android:id="@+id/recording_button"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:longClickable="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Switch To Cardboard Mode"
        android:id="@+id/soapbox_button"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recording_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="soapboxvr"
        android:id="@+id/textView"
        android:textColor="#fb14345f"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Google Cardboard VR app that helps you practice public speaking! Make sure you check out your recordings later."
        android:layout_below="@+id/soapbox_button"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Created by Jesse Zhou (UCSD), Emily Wang (UCLA), and Christian Gutierrez (UCSD)"
        android:layout_below="@+id/soapbox_button"
        android:paddingTop="120dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        />

</RelativeLayout>
